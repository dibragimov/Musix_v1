<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:layout_width="fill_parent" android:background="@drawable/player_play_list_bg" android:orientation="vertical">
<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:background="@drawable/music_catalog_header" android:gravity="center_vertical|fill_horizontal" android:id="@+id/panelPlayerHeader" android:visibility="visible">
<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btnPlayerPlaylistPopup1" android:layout_marginLeft="10dip" android:src="@drawable/player_flip_to_player" android:background="@drawable/blue_button_indicator"></ImageButton>
<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" android:layout_marginLeft="5dip" android:layout_marginRight="5dip" android:layout_gravity="center_vertical|center_horizontal" android:gravity="center" android:id="@+id/txtPlayerHeader1" android:text="Album Name"></TextView>
<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/btnPlayerBackToPrevScreen1" android:layout_marginRight="10dip" android:src="@drawable/player_back_btn_icon" android:background="@drawable/blue_back_button_indicator"></ImageButton>
</LinearLayout>
<ListView android:layout_height="wrap_content" android:divider="@drawable/player_popup_catalog_separtor" android:id="@+id/lstSongsCurrentPlaylist" android:layout_width="fill_parent" android:background="@drawable/player_popup_playlist_bg" android:layout_marginBottom="15dip" android:drawSelectorOnTop="false" android:cacheColorHint="#00000000"></ListView>
</LinearLayout>
