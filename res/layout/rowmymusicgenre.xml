<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_height="wrap_content" 
	android:layout_width="fill_parent" 
	android:orientation="horizontal" android:minHeight="59dip" android:layout_gravity="right" android:gravity="center">
		<ImageView 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="10dip" 
			android:layout_gravity="left|center_vertical" 
			android:id="@+id/btnMyMusicSelectGenre" android:background="@drawable/left_arrow"/>
		<TextView 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="header" 
			android:id="@+id/txtMyMusicGenreRowTitle" 
			android:textColor="#ffa7a7a7" android:layout_gravity="right|center_vertical" android:layout_weight="1" android:gravity="right" android:layout_marginRight="15dip"/>
		
</LinearLayout>
