<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:layout_width="fill_parent" android:minHeight="40dip" android:orientation="horizontal" android:gravity="right|center_vertical">
<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/left_arrow" android:layout_marginLeft="10dip" android:layout_weight="0"></ImageView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dip" android:gravity="right" android:id="@+id/txtMusicCatalogSearchedName" android:text="Searched Text" android:textColor="#FFF" android:textStyle="bold" android:paddingLeft="3dip" android:paddingRight="3dip" android:layout_weight="1"></TextView>
<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imgMusicCatalogSearchedIcon" android:layout_marginRight="10dip" android:layout_marginLeft="10dip" android:layout_weight="0" />
</LinearLayout>
