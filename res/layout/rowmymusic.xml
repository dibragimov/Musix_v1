<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" 
	android:layout_width="fill_parent" 
	android:orientation="horizontal" android:minHeight="49dip">
		<ImageView 
			android:id="@+id/imgMyMusicRowCategory" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="10dip" android:layout_gravity="left|center_vertical"/>
		<LinearLayout        
			android:orientation="vertical"        
			android:layout_width="fill_parent"        
			android:layout_height="wrap_content"
			android:layout_weight="1" android:layout_marginLeft="10dip" android:layout_gravity="left|center">
			<TextView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="header" 
				android:id="@+id/txtMyMusicRowTitle" 
				android:textColor="#ff778f4e"/>
			<TextView 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:text="subheader" 
				android:id="@+id/txtMyMusicRowSubTitle" 
				android:textColor="#ffa7a7a7"/>
		</LinearLayout>
		
		<ImageView 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginRight="10dip" 
			android:layout_gravity="right|center_vertical" 
			android:background="@drawable/right_arrow" 
			android:id="@+id/btnMyMusicSelectCategory"/>
	
</LinearLayout>
